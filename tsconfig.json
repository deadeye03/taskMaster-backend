{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./src/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "lib": [
      "ES2020"
    ]
  },
  "include": [
    "src/**/*",
    "src/config"
  ]
}